<?xml version="1.0" encoding="utf-8"?>
<jing.app.hey.ui.BucketListItem
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/bucket_list_item_height"
    android:orientation="horizontal">
    <ImageView 
        android:id="@+id/cover"
        android:layout_width="@dimen/bucket_list_item_image_size"
        android:layout_height="@dimen/bucket_list_item_image_size"
        android:scaleType="fitXY"
        android:contentDescription="@string/bucket_cover_description" />
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dip"
        android:layout_toRightOf="@id/cover"
        android:orientation="horizontal" >
        <TextView 
        	android:id="@+id/bucket_name"
        	android:layout_weight="1"
        	android:layout_width="0dip"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            style="@android:style/TextAppearance.Large" />
        <TextView 
        	android:id="@+id/count"
        	android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            style="@android:style/TextAppearance.Large"  />
    </LinearLayout>

</jing.app.hey.ui.BucketListItem>